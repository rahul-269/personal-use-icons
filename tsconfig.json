{
  "compilerOptions": {
    "declaration": true, // Enable declaration file generation
    "declarationDir": "./dist", // Output declaration files to the `dist` folder
    "outDir": "./dist", // Specify the output directory for compiled JS files
    "esModuleInterop": true, // Enable interoperability between CommonJS and ES Modules
    "moduleResolution": "node", // Resolve modules like Node.js
    "module": "ESNext", // Output as ES modules
    "target": "ESNext", // Compile to the latest ECMAScript version
    "strict": true, // Enable all strict type-checking options
    "jsx": "react-jsx",
    "baseUrl": "./src", // Set base directory for non-relative imports
    "paths": {
      "icons/*": ["icons/*"] // Resolve `icons/*` to the `src/icons/*` folder
    }
  },
  "include": [
    "src/**/*", // Include all files in the `src` folder
    "src/types.d.ts",
    "scripts/generate-index.ts"
  ]
}
